<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WKuWKu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceContainer">@color/surface</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorSurfaceContainerHigh">@color/surface</item>
        <item name="backgroundColor">@color/background</item>
        <item name="popupMenuBackground">@color/surface</item>
        <item name="preferenceTheme">@style/ThemeOverlay.WKuWKu.Preference</item>
    </style>

    <style name="Theme.WKuWKu" parent="Base.Theme.WKuWKu" />
    <style name="Theme.WKuWKu.TextInputEditText.OutlinedBox" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="Theme.WKuWKu.AutoCompleteTextView.OutlinedBox" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="Theme.WKuWKu.Button.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">25dp</item>
    </style>
    <style name="Theme.WKuWKu.GPButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ThemeOverlay.WKuWKu.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/Preference.WKuWKu.SwitchPreferenceCompat</item>
    </style>
    <style name="Preference.WKuWKu.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/widget_switch_compat</item>
    </style>
</resources>