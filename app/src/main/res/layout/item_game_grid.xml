<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewData"
            type="ink.snowland.wkuwku.bean.UiGameState" />

        <import type="ink.snowland.wkuwku.util.TimeUtils" />

        <import type="android.view.View" />

        <import type="ink.snowland.wkuwku.db.entity.Game" />

        <import type="ink.snowland.wkuwku.util.FlagUtils" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:hidden="@{viewData.hidden}">
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Outlined"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:hidden="@{viewData.hidden}">
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="267dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/default_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/no_cover"
                        android:gravity="center_horizontal"
                        android:paddingTop="80dp"
                        android:textSize="24sp"
                        android:fontFamily="@font/bitcount_grid_double_variable_font" />
                </FrameLayout>

                <Button
                    android:id="@+id/button_more"
                    style="@style/Theme.WKuWKu.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_more_vert"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/black_alpha_700"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:text="@{viewData.origin.title}"
                        android:textColor="@color/white"
                        tools:text="Super Mario Bros." />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="@{@string/label_reg + FlagUtils.flag(viewData.origin.region)}"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="@{@string/label_pub + (viewData.origin.publisher == null || viewData.origin.publisher.isEmpty() ? @string/unknown : viewData.origin.publisher)}"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="@{@string/label_system + viewData.origin.system}"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <Button
                    android:id="@+id/button_launch"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_play_arrow"
                    android:translationY="24dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/linearLayout"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>