<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_zigzag_sm_landscape"
    tools:context=".ui.play.PlayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".ui.play.PlayFragment">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <android.opengl.GLSurfaceView
            android:id="@+id/gl_surface_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_gp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_l2"
                style="@style/Theme.WKuWKu.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/l2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_l"
                style="@style/Theme.WKuWKu.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_l2"
                android:minWidth="100dp"
                android:text="@string/l"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_l2" />

            <ink.snowland.wkuwku.view.JoystickView
                android:id="@+id/joystick_view"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                app:JV_backgroundSizeRatio="70%"
                app:JV_borderWidth="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            tools:layout_width="300dp">

            <Button
                android:id="@+id/button_r2"
                style="@style/Theme.WKuWKu.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:minWidth="100dp"
                android:text="@string/r2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_r"
                style="@style/Theme.WKuWKu.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:text="@string/r"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_r2" />

            <Button
                android:id="@+id/button_a"
                style="@style/Theme.WKuWKu.GPButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/a"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_b" />

            <Button
                android:id="@+id/button_b"
                style="@style/Theme.WKuWKu.GPButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="70dp"
                android:text="@string/b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button_x"
                style="@style/Theme.WKuWKu.GPButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="70dp"
                android:text="@string/x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_a" />

            <Button
                android:id="@+id/button_y"
                style="@style/Theme.WKuWKu.GPButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70dp"
                android:text="@string/y"
                app:layout_constraintBottom_toTopOf="@+id/button_a"
                app:layout_constraintEnd_toStartOf="@+id/button_b"
                app:layout_constraintStart_toEndOf="@+id/button_x" />

            <Button
                android:id="@+id/button_a_b"
                style="@style/Theme.WKuWKu.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/button_a"
                android:textStyle="bold"
                android:text="@string/a_b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_a" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:id="@+id/button_select"
            style="@style/Theme.WKuWKu.Button.OutlinedButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/select" />

        <Button
            android:id="@+id/button_start"
            style="@style/Theme.WKuWKu.Button.OutlinedButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/button_select"
            android:text="@string/start" />
    </RelativeLayout>
</FrameLayout>
